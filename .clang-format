BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Always
ColumnLimit: 100

BreakBeforeBraces: Allman
BraceWrapping:
  AfterNamespace: true
  AfterClass: true
  AfterStruct: true
  AfterControlStatement: true
  BeforeElse: true

NamespaceIndentation: All
AllowShortFunctionsOnASingleLine: None
SortIncludes: true
IncludeBlocks: Regroup
SpacesInParentheses: false
